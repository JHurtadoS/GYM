<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
  <persistence-unit name="GymPU" transaction-type="RESOURCE_LOCAL">
    <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
    <class>Modelo.Ejercicio</class>
    <class>Modelo.Funcional</class>
    <class>Modelo.Instructor</class>
    <class>Modelo.Actividad</class>
    <class>Modelo.Cita</class>
    <class>Modelo.Evento</class>
    <class>Modelo.Tipo</class>
    <class>Modelo.Enfermero</class>
    <class>Modelo.Inscripcion</class>
    <class>Modelo.Usuario</class>
    <class>Modelo.Alimento</class>
    <class>Modelo.Consumidor</class>
    <class>Modelo.HistorialActividades</class>
    <class>Modelo.Rutina</class>
    <class>Modelo.Credenciales</class>
    <class>Modelo.Peticiones</class>
    <class>Modelo.Herramienta</class>
    <class>Modelo.PlanNutricion</class>
    <properties>
      <property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/gimnasio?serverTimezone=UTC"/>
      <property name="javax.persistence.jdbc.user" value="root"/>
      <property name="javax.persistence.jdbc.driver" value="com.mysql.cj.jdbc.Driver"/>
      <property name="javax.persistence.jdbc.password" value="123456"/>
    </properties>
  </persistence-unit>
</persistence>
